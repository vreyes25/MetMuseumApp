<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MuseumApp.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/backgroundDark</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/backgroundDark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NavBar">
        <item name="android:background">@color/navigationMenuDark</item>
    </style>

    <style name="Background">
        <item name="android:background">@color/backgroundDark</item>
    </style>

    <style name="Title">
        <item name="android:textColor">@color/titleDark</item>
    </style>

    <style name="Line">
        <item name="android:background">@color/titleDark</item>
    </style>

    <style name="Text">
        <item name="android:textColor">@color/textDark</item>
    </style>

    <style name="Box">
        <item name="android:textColor">@color/textDark</item>
        <item name="android:strokeColor">@color/textDark</item>
    </style>

    <style name="StatusBar">
        <item name="android:statusBarColor">@color/backgroundDark</item>
    </style>
</resources>